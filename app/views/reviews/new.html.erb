<div class="container">
  <h1>Add a review</h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <div class="star-rating">
    <% 5.times do |i| %>
      <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
    <% end %>
  </div>
  <%= f.submit class:"btn btn-primary mt-2"%>
  <% end %>
  <div class="container mt-4">
  <%= link_to restaurants_path do%>
    <p><i class="fas fa-undo-alt"></i> Back to list</p>
  <% end %>
</div>
</div>
