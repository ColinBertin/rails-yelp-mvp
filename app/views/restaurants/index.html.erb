<div class="container">
  <h1 class="mt-5">List of restaurants</h1>
  <br>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <div class="card-trip">
        <img src="http://source.unsplash.com/featured/?<%= restaurant.category %>&food&<%= rand(1000) %>" />
        <div class="card-trip-infos">
          <div>
            <h2><%= restaurant.name %></h2>
            <p><%= restaurant.address %></p>
          </div>
          <h2 class="card-trip-pricing"><%= restaurant.category %></h2>
        </div>
      <%= link_to "" , restaurant_path(restaurant), class: "card-link"%>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-success mt-4 mb-5"%>
</div>
